{
  "name": "incident",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": {
    "type": "git",
    "url": "<Add your repository here>"
  },
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.9",
    "express": "^4.17.2",
    "hdb": "^0.18.3",
    "supertest": "^6.2.2"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "engines": {
    "node": "^16",
    "npm": "7.13.0"
  },
  "scripts": {
    "start": "cds run",
    "build": "cds build/all --clean;cp gen/srv/srv/csn.json srv/gen/;cp -r gen/db/src/gen db/src"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "features": {
      "fiori_preview": true
    },
    "requires": {
      "db": {
        "kind": "hana"
      }
    }
  }
}
